            function opaklik1() {
                document.getElementById('opaklik').style.opacity = 1;
            }
            function opaklik0() {
                document.getElementById('opaklik').style.opacity = 0;
            }
        </script>

        <div id="opaklik" style="width: 100%; height: 100%; background: rgba(0, 0, 0, 0.3); position: fixed; inset: 0px; z-index: 10; transition-duration: 0.3s; display: block; opacity: 0;"></div>*@

</body>
</html>
