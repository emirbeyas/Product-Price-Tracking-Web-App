<script>

    function clicked(i) {
        wrapper = document.getElementsByClassName('wrapper');
        let scroll = [0, 1, 2];
        scroll[i] = scroll[i] += 500;
        wrapper[i].scrollTo({
            left: scroll[i],
            behavior: 'smooth'
        });
        scroll[i] = wrapper[i].scrollLeft + 50;
        console.log(wrapper[i].scrollLeft);
    }

    function clicked2(i) {
        wrapper = document.getElementsByClassName('wrapper');
        let scroll = [0, 1, 2];
        scroll[i] = scroll[i] -= 500;
        wrapper[i].scrollTo({
            left: scroll[i],
            behavior: 'smooth'
        });
        scroll[i] = wrapper[i].scrollLeft + 50;
        console.log(wrapper[i].scrollLeft);
    }

</script>